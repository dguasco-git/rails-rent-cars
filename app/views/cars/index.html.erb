<h1>Choose your Car</h1>
  <%= link_to "Home", root_path, class: "btn btn-success" %>
  <%= link_to "Bookings", bookings_path(@car), class: "btn btn-success" %>


<div class="car-container mt-5">
  <% @cars.each do |car| %>
    <div class="card-car-infos">
      <img src=<%= car.photo_url %> width="500" height="400"></>
      <div>
        <h2><%= car.brand %></h2>
        <%= car.model %>
        <%# <%= car.year_of_production %>
        <%# <%= car.address %>
        <%= car.price_per_day %>

        <%= link_to "More details", car_path(car), class: "btn btn-success" %>
      </div>
    </div><br><br>
  <% end %>
</div>

