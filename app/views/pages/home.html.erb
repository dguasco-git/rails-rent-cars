<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://cdn-s-www.lalsace.fr/images/ED82BE29-CBAC-40EC-B71C-285CD717A43C/NW_raw/la-voiture-noire-de-bugatti-modele-unique-photo-dr-1608828241.jpg);">
  <div class="container">
    <h1>Fast as a thunder</h1>
    <p>Book your favorite car and go everywhere you want !</p>
    <%= link_to "Start now", cars_path, class: "btn btn-gradient" %>
  </div>
</div>

<div class="car-container mt-5">
  <% @cars.each do |car| %>
    <img src=<%= car.photo_url %> width="500" height="400"></>
    <p><strong><%= car.brand %></strong></p>
    <p>Model : <%= car.model %></p>
    <%# <%= car.year_of_production %>
    <%# <%= car.address %>
    <%# <p>Price per day: <%= car.price_per_day %></p><br><br>
  <% end %>
</div>
